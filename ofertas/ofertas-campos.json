[
    {
        "name": "ofertas",
        "type": "base",
        "system": false,
        "schema": [
            {
                "name": "titulo",
                "type": "text",
                "required": true,
                "options": {
                    "min": 5,
                    "max": 100
                }
            },
            {
                "name": "ubicacion",
                "type": "text",
                "required": true,
                "options": {}
            },
            {
                "name": "modalidad",
                "type": "select",
                "required": true,
                "options": {
                    "maxSelect": 1,
                    "values": [
                        "presencial",
                        "remoto",
                        "hibrido"
                    ]
                }
            },
            {
                "name": "descripcion",
                "type": "editor",
                "required": true,
                "options": {}
            },
            {
                "name": "whatsapp_contacto",
                "type": "text",
                "required": true,
                "options": {
                    "pattern": "^34[0-9]{9}$"
                }
            },
            {
                "name": "estado",
                "type": "select",
                "required": true,
                "options": {
                    "maxSelect": 1,
                    "values": [
                        "activa",
                        "cerrada"
                    ]
                }
            }
        ],
        "listRule": "estado = 'activa'",
        "viewRule": "estado = 'activa'",
        "createRule": "",
        "updateRule": null,
        "deleteRule": null
    }
]
